{
  "name": "coding-buddy",
  "displayName": "Coding Buddy (AI Coder)",
  "description": "Your friendly code helper!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration":[
      {
        "title": "Coding Buddy",
        "properties": {
          "codingBuddy.apiKey": {
            "type": "string",
            "default": "",
            "description": "OpenAI API Key"
          },
          "codingBuddy.maxSavedMessages": {
            "type": "number",
            "default": 5,
            "description": "Maximum number of sent messages to Coding Buddy per chat. Needs to be between 1 and 25, and if set under or above these values, it will be set to the closest value."
          },
          "codingBuddy.clearChatOnClose": {
            "type": "boolean",
            "default": false,
            "description": "Clear chat when closing Visual Studio Code."
          }
        }
      }
    ],
    "menus": {
      "view/title":[
        {
          "command": "coding-buddy.newChat",
          "group": "navigation@0"
        },
        {
          "command": "coding-buddy.changeChat",
          "group": "navigation@1"
        },
        {
          "command": "coding-buddy.deleteChat",
          "group": "navigation@2"
        },
        {
          "command": "coding-buddy.goToSettings",
          "group":"navigation@3"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "buddyChat",
          "title": "Coding Buddy",
          "icon": "media/buddyChat.png"
          
        }
      ]
    },
    "views": {
      "buddyChat": [
        {
          "type": "webview",
          "id": "coding-buddy.buddyWebview",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "coding-buddy.newChat",
        "title": "Create Chat",
        "category": "Coding Buddy",
        "icon": "$(add)"
      },
      {
        "command": "coding-buddy.setDefaults",
        "title": "Set Coding Buddy Defaults",
        "category": "Coding Buddy"
      },
      {
        "command": "coding-buddy.changeChat",
        "title": "Change Chat",
        "icon": "$(references)",
        "category": "Coding Buddy"
      },
      {
        "command": "coding-buddy.deleteChat",
        "title": "Delete Chat",
        "icon": "$(trash)",
        "category": "Coding Buddy"
      },
      {
        "command": "coding-buddy.goToSettings",
        "title": "Go to Settings",
        "icon": "$(gear)",
        "category": "Coding Buddy"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.35",
    "openai": "^4.33.0"
  }
}
