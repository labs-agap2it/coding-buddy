{
  "name": "coding-buddy",
  "displayName": "Coding Buddy (AI Coder)",
  "description": "Your friendly code helper!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Coding Buddy",
        "properties": {
          "codingBuddy.apiKey": {
            "type": "string",
            "default": "",
            "description": "OpenAI API Key"
          },
          "codingBuddy.model": {
            "type": "string",
            "default": "gpt-3.5-turbo",
            "enum": [
              "gpt-3.5-turbo",
              "gpt-4-turbo",
              "gpt-4o",
              "gpt-4o-mini",
              "gpt-o3-mini",
              "gpt-01"
            ],
            "description": "OpenAI model for Coding Buddy to use. The extension was tested with all models, but it is recommended to use gpt-4-turbo for better results."
          },
          "codingBuddy.maxSavedMessages": {
            "type": "number",
            "default": 5,
            "description": "Maximum number of sent messages to Coding Buddy per chat. Needs to be between 1 and 25, and if set under or above these values, it will be set to the closest value."
          }
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "coding-buddy.newChat",
          "group": "navigation@0",
          "when": "view == coding-buddy.buddyWebview"
        },
        {
          "command": "coding-buddy.editChatName",
          "group": "navigation@1",
          "when": "view == coding-buddy.buddyWebview"
        },
        {
          "command": "coding-buddy.changeChat",
          "group": "navigation@2",
          "when": "view == coding-buddy.buddyWebview"
        },
        {
          "command": "coding-buddy.deleteChat",
          "group": "navigation@3",
          "when": "view == coding-buddy.buddyWebview"
        },
        {
          "command": "coding-buddy.goToSettings",
          "group": "navigation@4",
          "when": "view == coding-buddy.buddyWebview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "buddyChat",
          "title": "Coding Buddy",
          "icon": "media/buddyChat.png"
        }
      ]
    },
    "views": {
      "buddyChat": [
        {
          "type": "webview",
          "id": "coding-buddy.buddyWebview",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "coding-buddy.textChat",
        "title": "Text Chat",
        "category": "Coding Buddy",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "coding-buddy.newChat",
        "title": "Create Chat",
        "category": "Coding Buddy",
        "icon": "$(add)"
      },
      {
        "command": "coding-buddy.setDefaults",
        "title": "Set Coding Buddy Defaults",
        "category": "Coding Buddy"
      },
      {
        "command": "coding-buddy.changeChat",
        "title": "Change Chat",
        "icon": "$(references)",
        "category": "Coding Buddy"
      },
      {
        "command": "coding-buddy.deleteChat",
        "title": "Delete Chat",
        "icon": "$(trash)",
        "category": "Coding Buddy"
      },
      {
        "command": "coding-buddy.goToSettings",
        "title": "Go to Settings",
        "icon": "$(gear)",
        "category": "Coding Buddy"
      },
      {
        "command": "coding-buddy.editChatName",
        "title": "Change chat's name",
        "icon": "$(edit)",
        "category": "Coding Buddy"
      }
    ],
    "keybindings": [
      {
        "command": "coding-buddy.textChat",
        "key": "ctrl+shift+enter",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^22.13.4",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "svelte": "^5.20.2",
    "svelte-loader": "^3.2.4",
    "svelte-preprocess": "^6.0.3",
    "ts-loader": "^9.5.2",
    "typescript": "5.4"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.35",
    "async-mutex": "^0.5.0",
    "ignore": "^7.0.3",
    "openai": "^4.33.0",
    "sqlite3": "^5.1.7",
    "tree-sitter": "^0.22.4",
    "tree-sitter-c-sharp": "^0.23.1",
    "tree-sitter-cpp": "^0.23.4",
    "tree-sitter-java": "^0.23.5",
    "tree-sitter-javascript": "^0.23.1",
    "tree-sitter-python": "^0.23.6",
    "uuid": "^10.0.0",
    "vectra": "^0.9.0",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  }
}
